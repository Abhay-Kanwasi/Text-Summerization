{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python310",
        "handler": "wsgi_handler",
        "installCommand": "pip install -r requirements.txt"
      }
    }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "frontend"
      },
      {
        "src": "/summarize/",
        "dest": "backend/summarize/"
      }
    ]
  }